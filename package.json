{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "bin": {
    "six-cities": "./main.js"
  },
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "node ./src/cli.js",
    "mock-server": "json-server --watch src/mocks/mock-server-data.json --port 3000",
    "logs": "NODE_ENV=development USE_PINO_PRETTY_PIPE=true node --loader ts-node/esm src/index.ts | pino-pretty",
    "dev": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/index.ts",
    "dev:watch": "nodemon --exec \"node --loader ts-node/esm --no-warnings=ExperimentalWarning\" src/index.ts",
    "dev:debug": "NODE_ENV=development node --inspect --loader ts-node/esm --no-warnings=ExperimentalWarning src/index.ts"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.6",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "chalk": "^5.3.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "pino-pretty": "^13.1.3",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^13.0.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^17.2.3",
    "inversify": "^7.10.8",
    "mongoose": "^9.1.1",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2"
  }
}
